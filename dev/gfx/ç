import gfx from './gfx.js';

const layer1 = gfx.iBuffer();
layer1.clear();
layer1.color('#0ff');
layer1.rect(110,100,100,100);
layer1.color('#090');
layer1.text("testing", 150,50);


const drawPipeline = ()=>{
  gfx.clear();
  layer1.draw();
}
let arcFrame = 0;
const drawLoop = ()=> {
  // layer1
  arcFrame = (arcFrame + 10) % 360;
  layer1.clear();
  layer1.color('#99f');
  layer1.arc(60, 60, 40, 0, 360);
  layer1.color('#00f');
  layer1.arc(60,60,40,arcFrame + 30, arcFrame + 60);

  layer1.color('#f00');
  layer1.rect(100,100,60,60);
  layer1.color('#0f0');
  layer1.rect(130,130,60,60);
  
  layer1.textAlign('left');
  layer1.font('32px courier');
  layer1.text('left aligned test text...' + arcFrame/10, 0, 0);

  layer1.textAlign('center');
  layer1.font('italic 24px verdana');
  layer1.text('centered test text lol', 320,32);



  drawPipeline();
}

setInterval(drawLoop,500);








console.log('test ok');
